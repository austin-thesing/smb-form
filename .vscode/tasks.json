{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch All Forms",
      "type": "npm",
      "script": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$esbuild"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Watch SMB Form",
      "type": "shell",
      "command": "nodemon",
      "args": ["--watch", "src/core", "--watch", "src/configs/smb-form", "--ext", "js,json", "--exec", "node build.js"],
      "problemMatcher": ["$esbuild"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build Production",
      "type": "npm",
      "script": "build:prod",
      "group": "build",
      "problemMatcher": ["$esbuild"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Build SMB Form",
      "type": "shell",
      "command": "node",
      "args": ["build.js"],
      "problemMatcher": ["$esbuild"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
