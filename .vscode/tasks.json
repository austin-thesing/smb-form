{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Forms",
      "type": "shell",
      "command": "nodemon",
      "args": ["--watch", "src/core", "--watch", "src/configs/**/config.json", "--ext", "js,json", "--exec", "cross-env NODE_ENV=production node build.js"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$esbuild"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Forms",
      "type": "shell",
      "command": "cross-env",
      "args": ["NODE_ENV=production", "node", "build.js"],
      "group": "build",
      "problemMatcher": ["$esbuild"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
